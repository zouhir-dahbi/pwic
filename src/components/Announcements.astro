---
import announcements from '../data/announcements.json';

const activeAnnouncements = announcements.filter(a => a.active);

const typeStyles = {
  info: 'bg-blue-50 border-blue-200 text-blue-800',
  highlight: 'bg-primary-50 border-primary-200 text-primary-800',
  event: 'bg-amber-50 border-amber-200 text-amber-800',
  urgent: 'bg-red-50 border-red-200 text-red-800'
};

const typeIcons = {
  info: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  highlight: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />`,
  event: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />`,
  urgent: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />`
};
---

{activeAnnouncements.length > 0 && (
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-10">
        <h2 class="text-3xl font-bold text-gray-800 font-heading mb-3">Announcements</h2>
        <p class="text-gray-600">Stay updated with the latest news from PWIC</p>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {activeAnnouncements.map((announcement) => (
          <div class={`rounded-xl border-2 p-6 ${typeStyles[announcement.type as keyof typeof typeStyles] || typeStyles.info}`}>
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={typeIcons[announcement.type as keyof typeof typeIcons] || typeIcons.info} />
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-2">{announcement.title}</h3>
                <p class="text-sm opacity-90">{announcement.content}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
)}
