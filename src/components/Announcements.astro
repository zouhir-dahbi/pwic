---
import announcements from '../data/announcements.json';

const activeAnnouncements = announcements.filter(a => a.active);
---

{activeAnnouncements.length > 0 && (
  <section class="py-8 bg-gradient-to-r from-primary-600 to-primary-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-4 overflow-hidden">
        <!-- Announcements Label -->
        <div class="flex-shrink-0 hidden sm:flex items-center gap-2 bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
          </svg>
          <span class="text-white font-semibold text-sm uppercase tracking-wide">News</span>
        </div>
        
        <!-- Scrolling Announcements -->
        <div class="flex-1 overflow-hidden">
          <div class="flex gap-8 animate-marquee whitespace-nowrap">
            {activeAnnouncements.map((announcement) => (
              <div class="inline-flex items-center gap-3 text-white">
                <span class="w-2 h-2 bg-primary-300 rounded-full flex-shrink-0"></span>
                <span class="font-medium">{announcement.title}:</span>
                <span class="opacity-90">{announcement.content}</span>
              </div>
            ))}
            {/* Duplicate for seamless loop */}
            {activeAnnouncements.map((announcement) => (
              <div class="inline-flex items-center gap-3 text-white">
                <span class="w-2 h-2 bg-primary-300 rounded-full flex-shrink-0"></span>
                <span class="font-medium">{announcement.title}:</span>
                <span class="opacity-90">{announcement.content}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
)}

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  .animate-marquee {
    animation: marquee 30s linear infinite;
  }
  
  .animate-marquee:hover {
    animation-play-state: paused;
  }
</style>
