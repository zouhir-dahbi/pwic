---
import announcements from '../data/announcements.json';

const activeAnnouncements = announcements.filter(a => a.active);
---

{activeAnnouncements.length > 0 && (
  <section class="py-2 bg-gradient-to-r from-amber-700 to-amber-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-3 overflow-hidden">
        <!-- Notifications Label -->
        <div class="flex-shrink-0 hidden sm:flex items-center gap-1.5 bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
          <span class="text-white font-semibold text-xs uppercase tracking-wide">Notifications</span>
        </div>
        
        <!-- Scrolling Notifications -->
        <div class="flex-1 overflow-hidden">
          <div class="flex gap-6 animate-marquee whitespace-nowrap text-sm">
            {activeAnnouncements.map((announcement) => (
              <div class="inline-flex items-center gap-2 text-white">
                <span class="w-1.5 h-1.5 bg-white/60 rounded-full flex-shrink-0"></span>
                <span class="font-semibold">{announcement.title}:</span>
                <span class="opacity-90">{announcement.content}</span>
              </div>
            ))}
            {/* Duplicate for seamless loop */}
            {activeAnnouncements.map((announcement) => (
              <div class="inline-flex items-center gap-2 text-white">
                <span class="w-1.5 h-1.5 bg-white/60 rounded-full flex-shrink-0"></span>
                <span class="font-semibold">{announcement.title}:</span>
                <span class="opacity-90">{announcement.content}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
)}

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  .animate-marquee {
    animation: marquee 12s linear infinite;
  }
  
  .animate-marquee:hover {
    animation-play-state: paused;
  }
</style>
