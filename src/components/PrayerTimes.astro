---
import siteConfig from '../data/site-config.json';

const mawaqitId = siteConfig.prayerTimes.mawaqitMosqueId;
const hasMawaqit = mawaqitId && mawaqitId !== 'YOUR_MOSQUE_ID_HERE';
---

<section class="py-16 bg-primary-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-10">
      <h2 class="text-3xl font-bold text-primary-800 font-heading mb-3">Prayer Times</h2>
      <p class="text-gray-600">Daily prayer schedule for Prince William Islamic Center</p>
    </div>

    <div class="max-w-4xl mx-auto">
      {hasMawaqit ? (
        <!-- Mawaqit Widget Embed -->
        <div class="mawaqit-widget bg-white rounded-2xl shadow-xl overflow-hidden">
          <iframe 
            src={`https://mawaqit.net/en/${mawaqitId}?widget=1`}
            style="border: none; width: 100%; height: 400px;"
            title="Prayer Times"
            loading="lazy"
          />
        </div>
      ) : (
        <!-- Placeholder when Mawaqit not configured -->
        <div class="bg-white rounded-2xl shadow-xl p-8">
          <div class="text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-primary-100 rounded-full mb-6">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-3">Jummah Prayer</h3>
            <p class="text-4xl font-bold text-primary-600 mb-4">1:00 PM</p>
            <p class="text-gray-500">Every Friday</p>
            <div class="mt-8 pt-6 border-t border-gray-100">
              <p class="text-sm text-gray-500">
                Full prayer times coming soon. Please contact the masjid for daily prayer schedule.
              </p>
            </div>
          </div>
        </div>
      )}

      <!-- Quick Info -->
      <div class="mt-8 grid grid-cols-1 sm:grid-cols-3 gap-4">
        <div class="bg-white rounded-xl p-6 shadow-md text-center">
          <svg class="w-8 h-8 text-primary-500 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <h4 class="font-semibold text-gray-800">Jummah</h4>
          <p class="text-sm text-gray-500">Fridays at 1:00 PM</p>
        </div>
        <div class="bg-white rounded-xl p-6 shadow-md text-center">
          <svg class="w-8 h-8 text-primary-500 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <h4 class="font-semibold text-gray-800">Sunday School</h4>
          <p class="text-sm text-gray-500">Sundays</p>
        </div>
        <div class="bg-white rounded-xl p-6 shadow-md text-center">
          <svg class="w-8 h-8 text-primary-500 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <h4 class="font-semibold text-gray-800">Community</h4>
          <p class="text-sm text-gray-500">All are welcome</p>
        </div>
      </div>
    </div>
  </div>
</section>
