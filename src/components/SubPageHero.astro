---
import { url } from '../utils/links';

interface Props {
  title: string;
  subtitle?: string;
  parentTitle: string;
  parentHref: string;
}

const { title, subtitle, parentTitle, parentHref } = Astro.props;
---

<section class="bg-gradient-to-br from-primary-800 via-primary-700 to-primary-900 py-10 sm:py-16 lg:py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="mb-4 sm:mb-6">
      <ol class="flex items-center gap-1.5 sm:gap-2 text-xs sm:text-sm flex-wrap">
        <li>
          <a href={url('/')} class="text-primary-200 hover:text-white transition-colors">Home</a>
        </li>
        <li class="text-primary-400">/</li>
        <li>
          <a href={parentHref} class="text-primary-200 hover:text-white transition-colors">{parentTitle}</a>
        </li>
        <li class="text-primary-400">/</li>
        <li class="text-white font-medium truncate max-w-[150px] sm:max-w-none">{title}</li>
      </ol>
    </nav>
    
    <h1 class="text-2xl sm:text-4xl lg:text-5xl font-bold text-white font-heading mb-2 sm:mb-4">{title}</h1>
    {subtitle && (
      <p class="text-base sm:text-xl text-primary-100 max-w-2xl">{subtitle}</p>
    )}
  </div>
</section>
