---
import { url } from '../utils/links';

interface Props {
  title: string;
  subtitle?: string;
  parentTitle: string;
  parentHref: string;
}

const { title, subtitle, parentTitle, parentHref } = Astro.props;
---

<section class="bg-gradient-to-r from-primary-800 via-primary-700 to-primary-800 py-6 sm:py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="mb-2 sm:mb-3">
      <ol class="flex items-center gap-1.5 sm:gap-2 text-xs sm:text-sm flex-wrap">
        <li>
          <a href={url('/')} class="text-primary-200 hover:text-white transition-colors">Home</a>
        </li>
        <li class="text-primary-400">/</li>
        <li>
          <a href={parentHref} class="text-primary-200 hover:text-white transition-colors">{parentTitle}</a>
        </li>
        <li class="text-primary-400">/</li>
        <li class="text-white font-medium truncate max-w-[150px] sm:max-w-none">{title}</li>
      </ol>
    </nav>
    
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
      <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold text-white font-heading">{title}</h1>
      {subtitle && (
        <p class="text-sm sm:text-base text-primary-100 max-w-xl">{subtitle}</p>
      )}
    </div>
  </div>
</section>
