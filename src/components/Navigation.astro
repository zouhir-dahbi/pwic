---
import { url } from '../utils/links';

const navItems = [
  { name: 'Home', href: url('/') },
  { name: 'About', href: url('/about') },
  { name: 'Services', href: url('/services') },
  { name: 'Education', href: url('/education') },
  { name: 'Events', href: url('/events') },
  { name: 'Contact', href: url('/contact') },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-white/95 backdrop-blur-md border-b border-gray-100 sticky top-0 z-50">
  <nav class="max-w-[1400px] mx-auto px-6 lg:px-10">
    <div class="flex justify-between items-center h-20 lg:h-24">
      <!-- Logo -->
      <a href={url('/')} class="flex items-center gap-3 group flex-shrink-0">
        <img 
          src={url('/images/pwic-logo.jpeg')} 
          alt="PWIC Logo" 
          class="h-12 w-12 lg:h-14 lg:w-14 rounded-xl object-cover shadow-md group-hover:shadow-lg transition-all duration-300"
        />
        <div class="hidden sm:block min-w-max">
          <span class="text-xl lg:text-2xl font-bold text-primary-800 tracking-tight">PWIC</span>
          <span class="block text-xs text-gray-500 font-medium whitespace-nowrap">Prince William Islamic Center</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center">
        <div class="flex items-center bg-gray-50/80 rounded-full p-1.5">
          {navItems.map((item) => (
            <a
              href={item.href}
              class={`px-5 py-2.5 rounded-full text-sm font-medium transition-all duration-200 ${
                currentPath === item.href || currentPath === item.href + '/'
                  ? 'bg-white text-primary-700 shadow-sm'
                  : 'text-gray-600 hover:text-primary-600'
              }`}
            >
              {item.name}
            </a>
          ))}
        </div>
        <a
          href={url('/donate')}
          class="ml-6 px-6 py-3 bg-primary-700 text-white rounded-full text-sm font-semibold hover:bg-primary-800 transition-all duration-300 shadow-md hover:shadow-lg"
        >
          Donate
        </a>
      </div>

      <!-- Tablet Navigation -->
      <div class="hidden md:flex lg:hidden items-center gap-1">
        {navItems.slice(0, 4).map((item) => (
          <a
            href={item.href}
            class={`px-3 py-2 rounded-lg text-sm font-medium transition-colors ${
              currentPath === item.href || currentPath === item.href + '/'
                ? 'bg-primary-50 text-primary-700'
                : 'text-gray-600 hover:text-primary-600'
            }`}
          >
            {item.name}
          </a>
        ))}
        <a
          href={url('/donate')}
          class="ml-2 px-4 py-2 bg-primary-700 text-white rounded-lg text-sm font-semibold hover:bg-primary-800 transition-colors"
        >
          Donate
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden flex items-center justify-center w-12 h-12 rounded-xl bg-gray-50 text-gray-600 hover:bg-primary-50 hover:text-primary-600 transition-colors"
        aria-label="Toggle menu"
      >
        <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden py-4">
      <div class="flex flex-col gap-1 bg-gray-50 rounded-2xl p-2">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`px-4 py-3.5 rounded-xl text-base font-medium transition-colors ${
              currentPath === item.href || currentPath === item.href + '/'
                ? 'bg-white text-primary-700 shadow-sm'
                : 'text-gray-600 hover:bg-white hover:text-primary-600'
            }`}
          >
            {item.name}
          </a>
        ))}
      </div>
      <a
        href={url('/donate')}
        class="mt-4 flex items-center justify-center px-6 py-4 bg-primary-700 text-white rounded-2xl text-base font-semibold hover:bg-primary-800 transition-all shadow-lg"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
        Donate Now
      </a>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });
</script>
