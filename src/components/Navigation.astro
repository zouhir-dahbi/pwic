            ) : (
              <a
                href={item.href}
                class={`px-5 py-2.5 rounded-full text-[15px] font-medium transition-all duration-200 ${
                  isActive(item)
                    ? 'bg-primary-600 text-white shadow-md'
                    : 'text-primary-800 hover:text-primary-600 hover:bg-primary-50'
                }`}
              >
