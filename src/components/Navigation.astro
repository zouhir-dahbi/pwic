---
import { url } from '../utils/links';
import siteConfig from '../data/site-config.json';

const servicesDropdown = [
  { name: 'All Services', href: url('/services'), description: 'Overview of our services', icon: 'grid', image: url('/images/services-banner.jpeg') },
  { name: 'Nikah (Marriage)', href: url('/services/marriage'), description: 'Islamic marriage ceremony', icon: 'heart', image: url('/images/nikah-couple-hands.jpeg') },
  { name: 'Counselling', href: url('/services/counselling'), description: 'Personal & family guidance', icon: 'chat', image: url('/images/counselling-support.jpeg') },
  { name: 'Mediation', href: url('/services/mediation'), description: 'Conflict resolution', icon: 'handshake', image: url('/images/mediation-handshake.jpeg') },
  { name: 'Islamic Divorce', href: url('/services/divorce'), description: 'Talaq & Khula services', icon: 'document', image: url('/images/divorce-papers.jpeg') },
  { name: 'Funeral Services', href: url('/services/funeral'), description: 'Janazah assistance', icon: 'candle', image: url('/images/islamic-cemetery.jpeg') },
];

const educationDropdown = [
  { name: 'Weekend School', href: url('/education'), description: 'About our school', icon: 'school', image: url('/images/islamic-school-students.jpeg') },
  { name: 'Registration', href: url('/education/registration'), description: 'Enroll your child', icon: 'pencil', image: url('/images/education-graduation-cap.jpeg') },
];

const navItems = [
  { name: 'Home', href: url('/') },
  { name: 'Events', href: url('/events') },
  { name: 'Services', href: url('/services'), hasDropdown: true, dropdown: servicesDropdown },
  { name: 'Education', href: url('/education'), hasDropdown: true, dropdown: educationDropdown },
  { name: 'About Us', href: url('/about') },
  { name: 'Contact Us', href: url('/contact') },
];

const currentPath = Astro.url.pathname;
const { facebook, youtube } = siteConfig.socialLinks;

// Check if current path is in a dropdown
const isInServices = currentPath.startsWith(url('/services'));
const isInEducation = currentPath.startsWith(url('/education'));

// Helper to check if nav item is active
const isActive = (item: typeof navItems[0]) => {
  if (item.name === 'Services') return isInServices;
  if (item.name === 'Education') return isInEducation;
  return currentPath === item.href || currentPath === item.href + '/';
};
---

<header class="bg-gradient-to-r from-white via-primary-50/30 to-white border-b border-primary-100/50 sticky top-0 z-50 shadow-sm backdrop-blur-sm">
