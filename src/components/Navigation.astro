                        <p class="text-xs font-medium opacity-80">Explore</p>
                        <p class="dropdown-preview-title text-lg font-bold">{item.name}</p>
                      </div>
                    </div>
                    
                    <!-- Menu Items -->
                    <div class="py-2">
                      {item.dropdown?.map((subItem) => (
                        <a
                          href={subItem.href}
                          data-preview-image={subItem.image}
                          class={`dropdown-item flex items-center gap-4 px-5 py-3 transition-all duration-200 ${
                            currentPath === subItem.href || currentPath === subItem.href + '/'
