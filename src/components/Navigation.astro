          <button
            class={`mobile-accordion-trigger w-full flex items-center justify-between px-4 py-3 rounded-xl text-base font-medium transition-colors ${
              isInServices
                ? 'bg-primary-50 text-primary-700'
                : 'text-gray-700 hover:bg-gray-50 hover:text-primary-600'
            }`}
          >
            Services
            <svg class="w-5 h-5 opacity-60 transition-transform accordion-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="mobile-accordion-content hidden pl-4 mt-1 space-y-0.5">
            {servicesDropdown.map((item) => (
              <a
                href={item.href}
                class={`block px-4 py-2.5 rounded-lg text-sm transition-colors ${
                  currentPath === item.href || currentPath === item.href + '/'
                    ? 'bg-primary-100 text-primary-700 font-medium'
                    : 'text-gray-600 hover:bg-gray-100 hover:text-primary-600'
                }`}
              >
                {item.name}
              </a>
            ))}
          </div>
        </div>
        
        <!-- Education Accordion -->
        <div class="mobile-accordion">
          <button
            class={`mobile-accordion-trigger w-full flex items-center justify-between px-4 py-3 rounded-xl text-base font-medium transition-colors ${
              isInEducation
                ? 'bg-primary-50 text-primary-700'
                : 'text-gray-700 hover:bg-gray-50 hover:text-primary-600'
            }`}
          >
            Education
            <svg class="w-5 h-5 opacity-60 transition-transform accordion-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="mobile-accordion-content hidden pl-4 mt-1 space-y-0.5">
            {educationDropdown.map((item) => (
              <a
                href={item.href}
                class={`block px-4 py-2.5 rounded-lg text-sm transition-colors ${
                  currentPath === item.href || currentPath === item.href + '/'
                    ? 'bg-primary-100 text-primary-700 font-medium'
                    : 'text-gray-600 hover:bg-gray-100 hover:text-primary-600'
                }`}
