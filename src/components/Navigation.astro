---
import { url } from '../utils/links';
import siteConfig from '../data/site-config.json';

const servicesDropdown = [
  { name: 'All Services', href: url('/services'), description: 'Overview of our services' },
  { name: 'Nikah (Marriage)', href: url('/services/marriage'), description: 'Islamic marriage ceremony' },
  { name: 'Counselling', href: url('/services/counselling'), description: 'Personal & family guidance' },
  { name: 'Mediation', href: url('/services/mediation'), description: 'Conflict resolution' },
  { name: 'Islamic Divorce', href: url('/services/divorce'), description: 'Talaq & Khula services' },
  { name: 'Funeral Services', href: url('/services/funeral'), description: 'Janazah assistance' },
];

const educationDropdown = [
  { name: 'Weekend School', href: url('/education'), description: 'About our school' },
  { name: 'School Program', href: url('/education/program'), description: 'Curriculum overview' },
  { name: 'Classes', href: url('/education/classes'), description: 'Grade levels & subjects' },
  { name: 'Schedule', href: url('/education/schedule'), description: 'Class times & calendar' },
  { name: 'Registration', href: url('/education/registration'), description: 'Enroll your child' },
  { name: 'Tuition & Fees', href: url('/education/fees'), description: 'Payment information' },
];

const navItems = [
  { name: 'Home', href: url('/') },
  { name: 'About', href: url('/about') },
  { name: 'Services', href: url('/services'), hasDropdown: true, dropdown: servicesDropdown },
  { name: 'Education', href: url('/education'), hasDropdown: true, dropdown: educationDropdown },
  { name: 'Events', href: url('/events') },
  { name: 'Contact', href: url('/contact') },
];

const currentPath = Astro.url.pathname;
const { facebook, youtube } = siteConfig.socialLinks;

// Check if current path is in a dropdown
const isInServices = currentPath.startsWith(url('/services'));
const isInEducation = currentPath.startsWith(url('/education'));
---

<header class="bg-white/95 backdrop-blur-md border-b border-gray-100 sticky top-0 z-50">
  <nav class="max-w-[1400px] mx-auto px-6 lg:px-10">
    <div class="flex justify-between items-center h-20 lg:h-24">
      <!-- Logo -->
      <a href={url('/')} class="flex items-center group flex-shrink-0">
        <img 
          src={url('/images/pwic-logo.jpeg')} 
          alt="Prince William Islamic Center" 
          class="h-14 sm:h-16 lg:h-[70px] w-auto object-contain group-hover:opacity-90 transition-all duration-300"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-5">
        <div class="flex items-center bg-primary-800 rounded-full p-1.5 shadow-lg">
          {navItems.map((item) => (
            item.hasDropdown ? (
              <div class="relative group">
                <button
                  class={`flex items-center gap-1 px-5 py-3 rounded-full text-base font-medium transition-all duration-200 ${
                    (item.name === 'Services' && isInServices) || (item.name === 'Education' && isInEducation)
                      ? 'bg-white text-primary-800 shadow-md'
                      : 'text-white/90 hover:text-white hover:bg-primary-700'
                  }`}
                >
                  {item.name}
                  <svg class="w-3.5 h-3.5 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                
                <!-- Dropdown Menu -->
                <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                  <div class="bg-white rounded-lg shadow-xl border border-gray-200 py-2 min-w-[200px]">
                    {item.dropdown?.map((subItem) => (
                      <a
                        href={subItem.href}
                        class={`block px-4 py-2.5 text-sm font-medium transition-colors ${
                          currentPath === subItem.href || currentPath === subItem.href + '/'
                            ? 'bg-primary-50 text-primary-700 border-l-2 border-primary-600'
                            : 'text-gray-700 hover:bg-gray-50 hover:text-primary-600'
                        }`}
                      >
                        {subItem.name}
                      </a>
                    ))}
                  </div>
                </div>
              </div>
            ) : (
              <a
                href={item.href}
                class={`px-5 py-3 rounded-full text-base font-medium transition-all duration-200 ${
                  currentPath === item.href || currentPath === item.href + '/'
                    ? 'bg-white text-primary-800 shadow-md'
                    : 'text-white/90 hover:text-white hover:bg-primary-700'
                }`}
              >
                {item.name}
              </a>
            )
          ))}
        </div>

        <a
          href={url('/donate')}
          class="px-7 py-3.5 bg-gradient-to-r from-amber-500 to-amber-600 text-white rounded-full text-base font-semibold hover:from-amber-600 hover:to-amber-700 transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
        >
          Donate
        </a>
        
        <!-- Social Icons (moved to right of Donate) -->
        <div class="flex items-center gap-2">
          {facebook && (
            <a 
              href={facebook}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center w-11 h-11 rounded-full bg-primary-100 text-primary-700 hover:bg-blue-500 hover:text-white transition-all duration-300 shadow-sm hover:shadow-md"
              aria-label="Facebook"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          )}
          {youtube && (
            <a 
              href={youtube}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center w-11 h-11 rounded-full bg-primary-100 text-primary-700 hover:bg-red-500 hover:text-white transition-all duration-300 shadow-sm hover:shadow-md"
              aria-label="YouTube"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
          )}
        </div>
      </div>

      <!-- Tablet Navigation -->
      <div class="hidden md:flex lg:hidden items-center gap-2">
        <div class="flex items-center bg-primary-800 rounded-full p-1">
          {navItems.slice(0, 4).map((item) => (
            <a
              href={item.href}
              class={`px-3 py-2 rounded-full text-sm font-medium transition-colors ${
                currentPath === item.href || currentPath === item.href + '/' ||
                (item.name === 'Services' && isInServices) || (item.name === 'Education' && isInEducation)
                  ? 'bg-white text-primary-800'
                  : 'text-white/90 hover:text-white hover:bg-primary-700'
              }`}
            >
              {item.name}
            </a>
          ))}
        </div>
        <a
          href={url('/donate')}
          class="px-4 py-2 bg-gradient-to-r from-amber-500 to-amber-600 text-white rounded-full text-sm font-semibold hover:from-amber-600 hover:to-amber-700 transition-colors shadow-md"
        >
          Donate
        </a>
        <!-- Social Icons for Tablet (after Donate) -->
        <div class="flex items-center gap-1">
          {facebook && (
            <a href={facebook} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-9 h-9 rounded-full bg-primary-100 text-primary-700 hover:bg-blue-500 hover:text-white transition-colors" aria-label="Facebook">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
            </a>
          )}
          {youtube && (
            <a href={youtube} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-9 h-9 rounded-full bg-primary-100 text-primary-700 hover:bg-red-500 hover:text-white transition-colors" aria-label="YouTube">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
            </a>
          )}
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden flex items-center justify-center w-12 h-12 rounded-xl bg-gray-50 text-gray-600 hover:bg-primary-50 hover:text-primary-600 transition-colors"
        aria-label="Toggle menu"
      >
        <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden py-4">
      <div class="flex flex-col gap-1 bg-gray-50 rounded-2xl p-2">
        <!-- Home -->
        <a
          href={url('/')}
          class={`px-4 py-3.5 rounded-xl text-base font-medium transition-colors ${
            currentPath === url('/') || currentPath === url('/') + '/'
              ? 'bg-white text-primary-700 shadow-sm'
              : 'text-gray-600 hover:bg-white hover:text-primary-600'
          }`}
        >
          Home
        </a>
        
        <!-- About -->
        <a
          href={url('/about')}
          class={`px-4 py-3.5 rounded-xl text-base font-medium transition-colors ${
            currentPath === url('/about') || currentPath === url('/about') + '/'
              ? 'bg-white text-primary-700 shadow-sm'
              : 'text-gray-600 hover:bg-white hover:text-primary-600'
          }`}
        >
          About
        </a>
        
        <!-- Services Accordion -->
        <div class="mobile-accordion">
          <button
            class={`mobile-accordion-trigger w-full flex items-center justify-between px-4 py-3.5 rounded-xl text-base font-medium transition-colors ${
              isInServices
                ? 'bg-white text-primary-700 shadow-sm'
                : 'text-gray-600 hover:bg-white hover:text-primary-600'
            }`}
          >
            Services
            <svg class="w-5 h-5 transition-transform accordion-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="mobile-accordion-content hidden pl-4 mt-1 space-y-1">
            {servicesDropdown.map((item) => (
              <a
                href={item.href}
                class={`block px-4 py-3 rounded-lg text-sm transition-colors ${
                  currentPath === item.href || currentPath === item.href + '/'
                    ? 'bg-primary-100 text-primary-700 font-medium'
                    : 'text-gray-600 hover:bg-gray-100'
                }`}
              >
                {item.name}
              </a>
            ))}
          </div>
        </div>
        
        <!-- Education Accordion -->
        <div class="mobile-accordion">
          <button
            class={`mobile-accordion-trigger w-full flex items-center justify-between px-4 py-3.5 rounded-xl text-base font-medium transition-colors ${
              isInEducation
                ? 'bg-white text-primary-700 shadow-sm'
                : 'text-gray-600 hover:bg-white hover:text-primary-600'
            }`}
          >
            Education
            <svg class="w-5 h-5 transition-transform accordion-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="mobile-accordion-content hidden pl-4 mt-1 space-y-1">
            {educationDropdown.map((item) => (
              <a
                href={item.href}
                class={`block px-4 py-3 rounded-lg text-sm transition-colors ${
                  currentPath === item.href || currentPath === item.href + '/'
                    ? 'bg-primary-100 text-primary-700 font-medium'
                    : 'text-gray-600 hover:bg-gray-100'
                }`}
              >
                {item.name}
              </a>
            ))}
          </div>
        </div>
        
        <!-- Events -->
        <a
          href={url('/events')}
          class={`px-4 py-3.5 rounded-xl text-base font-medium transition-colors ${
            currentPath === url('/events') || currentPath === url('/events') + '/'
              ? 'bg-white text-primary-700 shadow-sm'
              : 'text-gray-600 hover:bg-white hover:text-primary-600'
          }`}
        >
          Events
        </a>
        
        <!-- Contact -->
        <a
          href={url('/contact')}
          class={`px-4 py-3.5 rounded-xl text-base font-medium transition-colors ${
            currentPath === url('/contact') || currentPath === url('/contact') + '/'
              ? 'bg-white text-primary-700 shadow-sm'
              : 'text-gray-600 hover:bg-white hover:text-primary-600'
          }`}
        >
          Contact
        </a>
      </div>
      
      <!-- Donate Button for Mobile -->
      <a
        href={url('/donate')}
        class="mt-4 flex items-center justify-center px-6 py-4 bg-gradient-to-r from-amber-500 to-amber-600 text-white rounded-2xl text-base font-semibold hover:from-amber-600 hover:to-amber-700 transition-all shadow-lg"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
        Donate Now
      </a>
      
      <!-- Social Icons for Mobile (after Donate) -->
      <div class="flex items-center justify-center gap-3 mt-4">
        {facebook && (
          <a 
            href={facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center w-12 h-12 rounded-xl bg-blue-500 text-white hover:bg-blue-600 transition-colors shadow-md"
            aria-label="Facebook"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
        )}
        {youtube && (
          <a 
            href={youtube}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center w-12 h-12 rounded-xl bg-red-500 text-white hover:bg-red-600 transition-colors shadow-md"
            aria-label="YouTube"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
        )}
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });

  // Mobile accordion functionality
  document.querySelectorAll('.mobile-accordion-trigger').forEach(trigger => {
    trigger.addEventListener('click', () => {
      const accordion = trigger.closest('.mobile-accordion');
      const content = accordion?.querySelector('.mobile-accordion-content');
      const arrow = trigger.querySelector('.accordion-arrow');
      
      // Close other accordions
      document.querySelectorAll('.mobile-accordion').forEach(other => {
        if (other !== accordion) {
          other.querySelector('.mobile-accordion-content')?.classList.add('hidden');
          other.querySelector('.accordion-arrow')?.classList.remove('rotate-180');
        }
      });
      
      // Toggle current accordion
      content?.classList.toggle('hidden');
      arrow?.classList.toggle('rotate-180');
    });
  });
</script>
