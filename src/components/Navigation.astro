---
import { url } from '../utils/links';

const navItems = [
  { name: 'Home', href: url('/') },
  { name: 'About', href: url('/about') },
  { name: 'Services', href: url('/services') },
  { name: 'Education', href: url('/education') },
  { name: 'Events', href: url('/events') },
  { name: 'Contact', href: url('/contact') },
];

const base = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-lg sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-24">
      <!-- Logo -->
      <a href={url('/')} class="flex items-center gap-4 group">
        <div class="relative">
          <img 
            src={url('/images/pwic-logo.jpeg')} 
            alt="PWIC Logo" 
            class="h-16 w-16 sm:h-20 sm:w-20 rounded-full object-cover shadow-lg ring-4 ring-primary-100 group-hover:ring-primary-200 transition-all duration-300"
          />
          <div class="absolute -bottom-1 -right-1 w-5 h-5 bg-primary-500 rounded-full border-2 border-white"></div>
        </div>
        <div class="hidden sm:block">
          <span class="text-2xl sm:text-3xl font-bold text-primary-800 font-heading tracking-tight">PWIC</span>
          <span class="block text-sm text-gray-500 font-medium">Prince William Islamic Center</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-2">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`px-5 py-2.5 rounded-xl text-base font-medium transition-all duration-200 ${
              currentPath === item.href
                ? 'bg-primary-100 text-primary-700 shadow-sm'
                : 'text-gray-700 hover:bg-primary-50 hover:text-primary-600'
            }`}
          >
            {item.name}
          </a>
        ))}
        <a
          href={url('/donate')}
          class="ml-4 px-7 py-3 bg-gradient-to-r from-primary-600 to-primary-500 text-white rounded-xl text-base font-bold hover:from-primary-700 hover:to-primary-600 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
        >
          Donate
        </a>
      </div>

      <!-- Tablet Navigation (smaller screens) -->
      <div class="hidden md:flex lg:hidden items-center gap-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`px-3 py-2 rounded-lg text-sm font-medium transition-colors ${
              currentPath === item.href
                ? 'bg-primary-100 text-primary-700'
                : 'text-gray-600 hover:bg-primary-50 hover:text-primary-600'
            }`}
          >
            {item.name}
          </a>
        ))}
        <a
          href={url('/donate')}
          class="ml-2 px-4 py-2 bg-primary-600 text-white rounded-lg text-sm font-semibold hover:bg-primary-700 transition-colors shadow-md"
        >
          Donate
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-3 rounded-xl text-gray-600 hover:bg-primary-50 hover:text-primary-600 transition-colors"
        aria-label="Toggle menu"
      >
        <svg id="menu-icon" class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="close-icon" class="w-7 h-7 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-6">
      <div class="flex flex-col gap-2 pt-4 border-t border-gray-100">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`px-5 py-4 rounded-xl text-base font-medium transition-colors ${
              currentPath === item.href
                ? 'bg-primary-100 text-primary-700'
                : 'text-gray-600 hover:bg-primary-50 hover:text-primary-600'
            }`}
          >
            {item.name}
          </a>
        ))}
        <a
          href={url('/donate')}
          class="mt-3 px-5 py-4 bg-gradient-to-r from-primary-600 to-primary-500 text-white rounded-xl text-base font-bold text-center hover:from-primary-700 hover:to-primary-600 transition-all shadow-lg"
        >
          Donate Now
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  menuButton?.addEventListener('click', () => {
    const isOpen = !mobileMenu?.classList.contains('hidden');
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });
</script>
