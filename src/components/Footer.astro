---
import siteConfig from '../data/site-config.json';
---

<footer class="bg-primary-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- About -->
      <div class="md:col-span-2">
        <div class="flex items-center gap-3 mb-4">
          <img 
            src="/images/pwic-logo.jpeg" 
            alt="PWIC Logo" 
            class="h-12 w-12 rounded-full object-cover"
          />
          <div>
            <h3 class="text-lg font-bold font-heading">Prince William Islamic Center</h3>
            <p class="text-primary-200 text-sm">Serving the community since establishment</p>
          </div>
        </div>
        <p class="text-primary-200 text-sm leading-relaxed max-w-md">
          {siteConfig.description}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wider mb-4">Quick Links</h4>
        <ul class="space-y-2">
          <li><a href="/about" class="text-primary-200 hover:text-white text-sm transition-colors">About Us</a></li>
          <li><a href="/services" class="text-primary-200 hover:text-white text-sm transition-colors">Services</a></li>
          <li><a href="/sunday-school" class="text-primary-200 hover:text-white text-sm transition-colors">Sunday School</a></li>
          <li><a href="/events" class="text-primary-200 hover:text-white text-sm transition-colors">Events</a></li>
          <li><a href="/donate" class="text-primary-200 hover:text-white text-sm transition-colors">Donate</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wider mb-4">Contact</h4>
        <ul class="space-y-2 text-sm text-primary-200">
          <li class="flex items-start gap-2">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>{siteConfig.contact.address}</span>
          </li>
          {siteConfig.contact.email && (
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <a href={`mailto:${siteConfig.contact.email}`} class="hover:text-white transition-colors">
                {siteConfig.contact.email}
              </a>
            </li>
          )}
        </ul>

        <!-- Social Links -->
        <div class="flex gap-4 mt-6">
          {siteConfig.socialLinks.facebook && (
            <a href={siteConfig.socialLinks.facebook} target="_blank" rel="noopener noreferrer" class="text-primary-200 hover:text-white transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>

    <div class="border-t border-primary-800 mt-8 pt-8 text-center">
      <p class="text-primary-300 text-sm">
        &copy; {new Date().getFullYear()} Prince William Islamic Center. All rights reserved.
      </p>
    </div>
  </div>
</footer>
