---
import siteConfig from '../data/site-config.json';
import { url } from '../utils/links';
---

<footer class="bg-primary-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16">
    <div class="grid grid-cols-2 md:grid-cols-5 gap-8 lg:gap-12">
      <!-- Logo & Tagline -->
      <div class="col-span-2">
        <img 
          src={url('/images/pwic-logo-square.png')} 
          alt="PWIC" 
          class="h-28 sm:h-36 lg:h-44 w-auto object-contain mb-3"
        />
        <h3 class="text-base sm:text-lg font-bold font-heading leading-tight mb-1">Prince William Islamic Center</h3>
        <p class="text-primary-200 text-xs sm:text-sm">Serving Our Community with Faith</p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-base font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2.5">
          <li><a href={url('/about')} class="text-primary-200 hover:text-white text-base transition-colors">About Us</a></li>
          <li><a href={url('/services')} class="text-primary-200 hover:text-white text-base transition-colors">Services</a></li>
          <li><a href={url('/education')} class="text-primary-200 hover:text-white text-base transition-colors">Education</a></li>
          <li><a href={url('/events')} class="text-primary-200 hover:text-white text-base transition-colors">Events</a></li>
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h4 class="text-base font-semibold mb-4">Services</h4>
        <ul class="space-y-2.5">
          <li><a href={url('/services/marriage')} class="text-primary-200 hover:text-white text-base transition-colors">Nikah</a></li>
          <li><a href={url('/services/funeral')} class="text-primary-200 hover:text-white text-base transition-colors">Funeral</a></li>
          <li><a href={url('/services/counselling')} class="text-primary-200 hover:text-white text-base transition-colors">Counselling</a></li>
          <li><a href={url('/donate')} class="text-primary-200 hover:text-white text-base transition-colors">Donate</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-base font-semibold mb-4">Contact</h4>
        <ul class="space-y-2.5 text-base text-primary-200">
          {siteConfig.contact.phone && (
            <li>
              <a href={`tel:${siteConfig.contact.phone}`} class="hover:text-white transition-colors">
                {siteConfig.contact.phone}
              </a>
            </li>
          )}
          <li class="leading-relaxed">{siteConfig.contact.address}</li>
          {siteConfig.contact.email && (
            <li>
              <a href={`mailto:${siteConfig.contact.email}`} class="hover:text-white transition-colors">
                {siteConfig.contact.email}
              </a>
            </li>
          )}
        </ul>
        
        <!-- Social Links -->
        <div class="flex gap-3 mt-5">
          {siteConfig.socialLinks.facebook && (
            <a href={siteConfig.socialLinks.facebook} target="_blank" rel="noopener noreferrer" class="w-9 h-9 rounded-full border border-primary-600 flex items-center justify-center text-primary-200 hover:bg-primary-700 hover:text-white hover:border-primary-500 transition-all">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          )}
          {siteConfig.socialLinks.youtube && (
            <a href={siteConfig.socialLinks.youtube} target="_blank" rel="noopener noreferrer" class="w-9 h-9 rounded-full border border-primary-600 flex items-center justify-center text-primary-200 hover:bg-primary-700 hover:text-white hover:border-primary-500 transition-all">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="border-t border-primary-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-5">
      <p class="text-primary-300 text-xs sm:text-sm text-center">
        Prince William Islamic Center is a 501(c)(3) nonprofit organization | &copy; {new Date().getFullYear()} PWIC
      </p>
    </div>
  </div>
</footer>
