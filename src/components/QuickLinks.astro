---
import { url } from '../utils/links';

const links = [
  {
    title: 'Donate',
    description: 'Support our masjid and community programs',
    href: url('/donate'),
    image: url('/images/donation-heart-coins.jpeg')
  },
  {
    title: 'Education',
    description: 'Islamic education for all ages',
    href: url('/education'),
    image: url('/images/education-school-supplies.jpeg')
  },
  {
    title: 'Services',
    description: 'Nikah, funeral, and other services',
    href: url('/services'),
    image: url('/images/nikah-couple-hands.jpeg')
  },
  {
    title: 'Contact',
    description: 'Get in touch with us',
    href: url('/contact'),
    image: url('/images/contact-icons.jpeg')
  }
];
---

<section class="py-12 sm:py-20 bg-primary-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8 sm:mb-12">
      <h2 class="text-2xl sm:text-3xl font-bold text-white font-heading mb-2 sm:mb-3">Quick Access</h2>
      <p class="text-primary-200 text-sm sm:text-base">Everything you need in one place</p>
    </div>
    
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-6">
      {links.map((link) => (
        <a 
          href={link.href}
          class="group relative rounded-xl sm:rounded-2xl overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
        >
          <!-- Background Image -->
          <div class="absolute inset-0">
            <img src={link.image} alt={link.title} class="w-full h-full object-cover" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-black/20 group-hover:from-primary-900/90 group-hover:via-primary-800/60 transition-all duration-300"></div>
          </div>
          
          <!-- Content -->
          <div class="relative p-4 sm:p-6 min-h-[120px] sm:min-h-[160px] flex flex-col justify-end">
            <h3 class="text-lg sm:text-2xl font-bold text-white mb-0.5 sm:mb-1">{link.title}</h3>
            <p class="text-xs sm:text-sm text-white/80 hidden sm:block">{link.description}</p>
          </div>
          
          <!-- Arrow indicator -->
          <div class="absolute top-3 right-3 sm:top-4 sm:right-4 opacity-0 group-hover:opacity-100 transition-opacity">
            <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
