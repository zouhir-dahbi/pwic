---
import { url } from '../utils/links';

const links = [
  {
    title: 'Donate',
    description: 'Support our masjid and community programs',
    href: url('/donate'),
    icon: 'heart'
  },
  {
    title: 'Education',
    description: 'Islamic education for all ages',
    href: url('/education'),
    icon: 'book'
  },
  {
    title: 'Services',
    description: 'Nikah, funeral, and other services',
    href: url('/services'),
    icon: 'services'
  },
  {
    title: 'Contact',
    description: 'Get in touch with us',
    href: url('/contact'),
    icon: 'contact'
  }
];

const icons: Record<string, string> = {
  heart: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />`,
  book: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />`,
  services: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />`,
  contact: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`
};
---

<section class="py-12 sm:py-20 bg-primary-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8 sm:mb-12">
      <h2 class="text-2xl sm:text-3xl font-bold text-white font-heading mb-2 sm:mb-3">Quick Access</h2>
      <p class="text-primary-200 text-sm sm:text-base">Everything you need in one place</p>
    </div>
    
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-6">
      {links.map((link) => (
        <a 
          href={link.href}
          class="group relative bg-primary-100 rounded-xl sm:rounded-2xl p-4 sm:p-8 border border-primary-200 hover:bg-white hover:border-primary-300 hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
        >
          <div class="inline-flex items-center justify-center w-10 h-10 sm:w-14 sm:h-14 bg-primary-600 rounded-lg sm:rounded-xl mb-3 sm:mb-5 group-hover:bg-primary-700 transition-colors shadow-md">
            <svg class="w-5 h-5 sm:w-7 sm:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[link.icon]} />
          </div>
          <h3 class="text-base sm:text-xl font-semibold text-gray-800 mb-1 sm:mb-2 group-hover:text-primary-700 transition-colors">{link.title}</h3>
          <p class="text-xs sm:text-sm text-gray-600 group-hover:text-gray-700 transition-colors hidden sm:block">{link.description}</p>
          
          <!-- Arrow indicator -->
          <div class="absolute top-4 right-4 sm:top-8 sm:right-8 opacity-0 group-hover:opacity-100 transition-opacity">
            <svg class="w-4 h-4 sm:w-5 sm:h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
