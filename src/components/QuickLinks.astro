---
const links = [
  {
    title: 'Donate',
    description: 'Support our masjid and community programs',
    href: '/donate',
    icon: 'heart',
    color: 'bg-rose-500'
  },
  {
    title: 'Sunday School',
    description: 'Islamic education for children',
    href: '/sunday-school',
    icon: 'book',
    color: 'bg-primary-500'
  },
  {
    title: 'Services',
    description: 'Nikah, funeral, and other services',
    href: '/services',
    icon: 'services',
    color: 'bg-amber-500'
  },
  {
    title: 'Contact',
    description: 'Get in touch with us',
    href: '/contact',
    icon: 'contact',
    color: 'bg-sky-500'
  }
];

const icons: Record<string, string> = {
  heart: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />`,
  book: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />`,
  services: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />`,
  contact: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`
};
---

<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {links.map((link) => (
        <a 
          href={link.href}
          class="group bg-white rounded-2xl p-6 shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100"
        >
          <div class={`inline-flex items-center justify-center w-12 h-12 ${link.color} rounded-xl mb-4 group-hover:scale-110 transition-transform`}>
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[link.icon]} />
          </div>
          <h3 class="text-lg font-semibold text-gray-800 mb-2 group-hover:text-primary-600 transition-colors">{link.title}</h3>
          <p class="text-sm text-gray-500">{link.description}</p>
        </a>
      ))}
    </div>
  </div>
</section>
