---
import { url } from '../utils/links';

const images = [
  { src: url('/images/pwic-entrance.jpeg'), alt: 'PWIC Entrance' },
  { src: url('/images/pwic-inside.jpeg'), alt: 'PWIC Prayer Hall' },
  { src: url('/images/pwic-inside-2.jpeg'), alt: 'PWIC Interior' },
  { src: url('/images/mosque-entrance-panel.jpeg'), alt: 'Entrance Panel' },
  { src: url('/images/pwic-women-side.jpeg'), alt: 'Women Prayer Area' },
];
---

<section class="py-12 sm:py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8 sm:mb-10">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 font-heading mb-2 sm:mb-3">Our Masjid</h2>
      <p class="text-gray-600 text-sm sm:text-base">A welcoming space for worship and community</p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-2 sm:gap-4">
      {images.map((image, index) => (
        <div class={`rounded-xl sm:rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow ${index === 0 ? 'col-span-2 row-span-2' : ''}`}>
          <img 
            src={image.src} 
            alt={image.alt}
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-500 aspect-square"
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>
</section>
