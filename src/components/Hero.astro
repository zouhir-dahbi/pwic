---
import { url } from '../utils/links';

interface Props {
  title: string;
  subtitle?: string;
  showCTA?: boolean;
  backgroundImage?: string;
}

const { 
  title, 
  subtitle, 
  showCTA = false,
  backgroundImage = '/images/pwic-background-traditional.jpeg'
} = Astro.props;

const bgImage = backgroundImage.startsWith('/') ? url(backgroundImage) : backgroundImage;
---

<section class="relative min-h-[50vh] sm:min-h-[60vh] lg:min-h-[70vh] flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img 
      src={bgImage} 
      alt="PWIC Mosque" 
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-primary-900/90 via-primary-800/80 to-primary-900/70"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center py-12 sm:py-16">
    <h1 class="text-2xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold text-white font-heading leading-tight mb-4 sm:mb-6">
      {title}
    </h1>
    {subtitle && (
      <p class="text-base sm:text-xl lg:text-2xl text-primary-100 max-w-3xl mx-auto mb-6 sm:mb-8 leading-relaxed px-2">
        {subtitle}
      </p>
    )}
    {showCTA && (
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center px-4 sm:px-0">
        <a 
          href={url('/about')} 
          class="px-6 sm:px-8 py-3 sm:py-4 bg-white text-primary-700 rounded-lg font-semibold hover:bg-primary-50 transition-colors shadow-lg hover:shadow-xl text-sm sm:text-base"
        >
          Learn More
        </a>
        <a 
          href={url('/donate')} 
          class="px-6 sm:px-8 py-3 sm:py-4 bg-primary-500 text-white rounded-lg font-semibold hover:bg-primary-400 transition-colors shadow-lg hover:shadow-xl border-2 border-primary-400 text-sm sm:text-base"
        >
          Support Our Mission
        </a>
      </div>
    )}
  </div>

  <!-- Decorative Islamic Pattern (subtle) -->
  <div class="absolute bottom-0 left-0 right-0 h-16 sm:h-24 bg-gradient-to-t from-white to-transparent"></div>
</section>
