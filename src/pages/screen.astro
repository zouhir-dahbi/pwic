---
import siteConfig from '../data/site-config.json';

// MAWAQIT doesn't allow iframe embedding, so redirect to their page
const mawaqitUrl = siteConfig.prayerTimes.liveTimesUrl;
const hasMawaqit = mawaqitUrl && mawaqitUrl.length > 0;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Prayer Times Display - {siteConfig.siteName}</title>
    <meta name="description" content="Full screen prayer times display for {siteConfig.siteName}" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html, body {
        width: 100%;
        height: 100%;
        overflow: hidden;
        background: #1a1a2e;
      }
      
      .screen-container {
        width: 100vw;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      
      .screen-container iframe {
        width: 100%;
        height: 100%;
        border: none;
      }
      
      .redirect-message,
      .no-widget {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        color: white;
        font-family: system-ui, -apple-system, sans-serif;
        text-align: center;
        padding: 2rem;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
      }
      
      .redirect-message h1,
      .no-widget h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: #e8d5b7;
      }
      
      .redirect-message p,
      .no-widget p {
        font-size: 1.25rem;
        color: #a0a0a0;
        max-width: 500px;
      }
      
      .mawaqit-button {
        display: inline-block;
        margin-top: 2rem;
        padding: 1rem 2rem;
        background: linear-gradient(135deg, #166534 0%, #15803d 100%);
        color: white;
        text-decoration: none;
        border-radius: 12px;
        font-size: 1.25rem;
        font-weight: 600;
        transition: transform 0.2s, box-shadow 0.2s;
      }
      
      .mawaqit-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(22, 101, 52, 0.3);
      }
      
      .hint {
        margin-top: 1.5rem;
        font-size: 0.875rem !important;
        color: #6b7280 !important;
      }
      
      .mosque-icon {
        width: 120px;
        height: 120px;
        margin-bottom: 2rem;
        opacity: 0.8;
      }
    </style>
  </head>
  <body>
    <div class="screen-container">
      {hasMawaqit ? (
        <div class="redirect-message">
          <svg class="mosque-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M12 3C12 3 8 7 8 10C8 12.21 9.79 14 12 14C14.21 14 16 12.21 16 10C16 7 12 3 12 3Z" />
            <path d="M3 21H21" />
            <path d="M5 21V14C5 14 5 11 8 11" />
            <path d="M19 21V14C19 14 19 11 16 11" />
            <path d="M9 21V17C9 15.9 9.9 15 11 15H13C14.1 15 15 15.9 15 17V21" />
          </svg>
          <h1>{siteConfig.siteName}</h1>
          <p>Redirecting to MAWAQIT prayer times...</p>
          <a href={mawaqitUrl} class="mawaqit-button">
            Open MAWAQIT Display
          </a>
          <p class="hint">For TV/projector display, bookmark the MAWAQIT page directly</p>
        </div>
      ) : (
        <div class="no-widget">
          <svg class="mosque-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M12 3C12 3 8 7 8 10C8 12.21 9.79 14 12 14C14.21 14 16 12.21 16 10C16 7 12 3 12 3Z" />
            <path d="M3 21H21" />
            <path d="M5 21V14C5 14 5 11 8 11" />
            <path d="M19 21V14C19 14 19 11 16 11" />
            <path d="M9 21V17C9 15.9 9.9 15 11 15H13C14.1 15 15 15.9 15 17V21" />
          </svg>
          <h1>{siteConfig.siteName}</h1>
          <p>
            Prayer times display is being configured. 
            Please check back soon or contact the masjid for current prayer times.
          </p>
        </div>
      )}
    </div>
    
    {hasMawaqit && (
      <script is:inline define:vars={{ mawaqitUrl }}>
        // Auto-redirect after 2 seconds
        setTimeout(() => {
          window.location.href = mawaqitUrl;
        }, 2000);
      </script>
    )}
  </body>
</html>
