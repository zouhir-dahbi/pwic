---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import { url } from '../../utils/links';
---

<Layout title="Weekend Islamic School">
  <Hero 
    title="Weekend Islamic School"
    subtitle="Nurturing the next generation of Muslims"
    backgroundImage={url('/images/islamic-school-students.jpeg')}
  />

  <section class="py-16 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- About the School with Image -->
      <div class="flex flex-col lg:flex-row gap-8 mb-16">
        <div class="lg:w-2/5 flex-shrink-0">
          <div class="rounded-2xl overflow-hidden shadow-xl h-full">
            <img 
              src={url('/images/islamic-school-girls.jpeg')} 
              alt="Students learning" 
              class="w-full h-64 lg:h-full object-cover"
            />
          </div>
        </div>
        <div class="lg:w-3/5">
          <h2 class="text-3xl font-bold text-gray-800 font-heading mb-4">About Our School</h2>
          <p class="text-lg text-gray-600 mb-6">
            PWIC Weekend School is an Islamic school located in Manassas, Virginia. Our faculty consists of qualified 
            male and female teachers, administrators, and dedicated volunteers committed to Islamic education.
          </p>
          <div class="space-y-3">
            <div class="flex items-center gap-3 text-gray-700">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Ages 5 and up welcome</span>
            </div>
            <div class="flex items-center gap-3 text-gray-700">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Quran, Arabic & Islamic Studies</span>
            </div>
            <div class="flex items-center gap-3 text-gray-700">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Qualified male & female teachers</span>
            </div>
            <div class="flex items-center gap-3 text-gray-700">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Saturday & Sunday: 11:00 AM - 2:00 PM</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Tuition & Fees -->
      <div class="bg-white border border-gray-200 rounded-2xl shadow-sm overflow-hidden mb-10">
        <div class="bg-primary-700 px-6 py-4">
          <h2 class="text-xl font-bold text-white">Tuition & Fees</h2>
        </div>
        
        <div class="p-6">
          <!-- Main Fees -->
          <div class="grid sm:grid-cols-2 gap-4 mb-6">
            <div class="bg-primary-50 rounded-xl p-5 text-center">
              <div class="text-3xl font-bold text-primary-700 mb-1">$20.00</div>
              <div class="text-gray-600">Registration Fee</div>
              <div class="text-sm text-gray-500">For New Students</div>
            </div>
            <div class="bg-primary-50 rounded-xl p-5 text-center">
              <div class="text-3xl font-bold text-primary-700 mb-1">$100.00</div>
              <div class="text-gray-600">Monthly Tuition</div>
              <div class="text-sm text-gray-500">Per Child</div>
            </div>
          </div>

          <!-- Books & Materials -->
          <div class="border-t border-gray-200 pt-6">
            <h3 class="text-lg font-bold text-gray-800 mb-4">Books & Materials</h3>
            <div class="grid sm:grid-cols-3 gap-4">
              <div class="bg-gray-50 rounded-xl p-4 flex justify-between items-center">
                <span class="text-gray-700">Quran â€“ Juz Amma</span>
                <span class="font-bold text-gray-800">$25.00</span>
              </div>
              <div class="bg-gray-50 rounded-xl p-4 flex justify-between items-center">
                <span class="text-gray-700">Arabic Alphabet Cards</span>
                <span class="font-bold text-gray-800">$15.00</span>
              </div>
              <div class="bg-gray-50 rounded-xl p-4 flex justify-between items-center">
                <span class="text-gray-700">Arabic Alphabet Book</span>
                <span class="font-bold text-gray-800">$18.00</span>
              </div>
            </div>
          </div>

          <!-- Payment Methods -->
          <div class="border-t border-gray-200 pt-6 mt-6">
            <h3 class="text-lg font-bold text-gray-800 mb-4">Payment Methods</h3>
            <div class="flex flex-wrap gap-4">
              <div class="flex items-center gap-2 bg-gray-50 px-4 py-2 rounded-lg">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <span class="text-gray-700">Cash (monthly)</span>
              </div>
              <div class="flex items-center gap-2 bg-gray-50 px-4 py-2 rounded-lg">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                </svg>
                <span class="text-gray-700">Credit Card</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Financial Assistance -->
      <div class="bg-green-50 border border-green-200 rounded-2xl p-6 mb-10">
        <div class="flex gap-4">
          <div class="flex-shrink-0">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          <div>
            <h3 class="font-bold text-green-800 mb-2">Financial Assistance</h3>
            <p class="text-green-700 mb-4">
              PWIC believe that every child deserves access to Islamic Education. Financial assistance is available for families in need.
            </p>
            <a 
              href={url('/education/registration')}
              class="inline-flex items-center gap-2 text-green-700 font-semibold hover:text-green-800"
            >
              Apply for Financial Assistance
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Second Image -->
      <div class="mb-10 rounded-2xl overflow-hidden shadow-xl">
        <img 
          src={url('/images/education-graduation-cap.jpeg')} 
          alt="Education" 
          class="w-full h-64 object-cover"
        />
      </div>

      <!-- Register CTA -->
      <div class="bg-gradient-to-r from-primary-700 to-primary-600 rounded-2xl p-8 text-white text-center">
        <h3 class="text-2xl font-bold mb-4">Enroll Your Child Today</h3>
        <p class="text-primary-100 mb-6">
          Give your child the gift of Islamic education. Registration is now open!
        </p>
        <a 
          href={url('/education/registration')}
          class="inline-flex items-center gap-2 px-8 py-4 bg-white text-primary-700 rounded-xl font-semibold hover:bg-primary-50 transition-colors shadow-lg"
        >
          Register Now
        </a>
      </div>
    </div>
  </section>

  <!-- Contact Card -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-2">Prince William Islamic Center</h2>
        <p class="text-gray-600">9002 Mathis Ave., Manassas, Virginia 20110</p>
      </div>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="tel:703-330-3556"
          class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-primary-600 text-white rounded-xl font-semibold hover:bg-primary-700 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          (703) 330-3556
        </a>
        <a 
          href={url('/contact')}
          class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-white border border-gray-300 text-gray-700 rounded-xl font-semibold hover:bg-gray-50 transition-colors"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
</Layout>
