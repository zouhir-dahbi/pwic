---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import { url } from '../../utils/links';

const programs = [
  {
    title: 'Schedule',
    description: 'View class times and important information for parents.',
    href: url('/education/schedule'),
    icon: 'calendar'
  },
  {
    title: 'Registration',
    description: 'Register your child for our weekend Islamic school.',
    href: url('/education/registration'),
    icon: 'clipboard'
  },
  {
    title: 'Fees',
    description: 'Tuition rates, payment options, and financial assistance.',
    href: url('/education/fees'),
    icon: 'dollar'
  }
];

const icons: Record<string, string> = {
  calendar: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />`,
  clipboard: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />`,
  dollar: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`
};
---

<Layout title="Weekend Islamic School">
  <Hero 
    title="Weekend Islamic School"
    subtitle="Nurturing the next generation of Muslims"
    backgroundImage={url('/images/islamic-school-students.jpeg')}
  />

  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Mission & Vision -->
      <div class="grid md:grid-cols-2 gap-8 mb-16">
        <div class="bg-primary-50 rounded-2xl p-8">
          <h2 class="text-2xl font-bold text-primary-800 font-heading mb-4">Our Mission</h2>
          <p class="text-gray-700 leading-relaxed">
            Our mission is to connect our children to the Masjid and to Allah by providing religious, 
            educational, and social activities through the teaching of Islam. We are committed to teaching 
            the Arabic language, Quran, and providing Islamic education to children of the Muslim community 
            in Manassas, Centreville, Gainesville, and surrounding areas.
          </p>
        </div>
        <div class="bg-gray-50 rounded-2xl p-8">
          <h2 class="text-2xl font-bold text-gray-800 font-heading mb-4">Our Vision</h2>
          <p class="text-gray-700 leading-relaxed">
            Our vision is to be the best choice for parents in providing Islamic education to their children, 
            building their Muslim identity, and making them productive and responsible members of society.
          </p>
        </div>
      </div>

      <!-- Schedule Highlight -->
      <div class="bg-gradient-to-r from-primary-700 to-primary-600 rounded-2xl p-8 mb-16 text-white">
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <div>
            <h2 class="text-3xl font-bold mb-4">Weekend School Hours</h2>
            <p class="text-primary-100 mb-6">
              Classes are held every Saturday and Sunday at PWIC. Students learn Quran, Arabic, and Islamic Studies.
            </p>
            <div class="flex flex-wrap gap-4">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-primary-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>11:00 AM - 2:00 PM</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-primary-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span>Saturday & Sunday</span>
              </div>
            </div>
          </div>
          <div class="text-center">
            <div class="inline-block bg-white/10 backdrop-blur-sm rounded-2xl p-6">
              <div class="text-5xl font-bold mb-2">$100</div>
              <div class="text-primary-200">per month / per child</div>
              <div class="text-sm text-primary-300 mt-1">$20 registration fee per semester</div>
            </div>
          </div>
        </div>
      </div>

      <!-- About the School with Images -->
      <div class="grid lg:grid-cols-2 gap-12 items-center mb-16">
        <div>
          <h2 class="text-3xl font-bold text-gray-800 font-heading mb-4">About Our School</h2>
          <p class="text-lg text-gray-600 mb-6">
            PWIC Weekend School is an Islamic school located in Manassas, Virginia. Our faculty consists of qualified 
            male and female teachers, administrators, and dedicated volunteers committed to Islamic education.
          </p>
          <div class="space-y-3">
            <div class="flex items-center gap-3 text-gray-700">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Ages 5 and up welcome</span>
            </div>
            <div class="flex items-center gap-3 text-gray-700">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Quran, Arabic & Islamic Studies</span>
            </div>
            <div class="flex items-center gap-3 text-gray-700">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Qualified male & female teachers</span>
            </div>
            <div class="flex items-center gap-3 text-gray-700">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Books & materials included</span>
            </div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <img 
            src={url('/images/islamic-school-girls.jpeg')} 
            alt="Students learning" 
            class="rounded-2xl shadow-lg w-full h-48 object-cover"
          />
          <img 
            src={url('/images/education-graduation-cap.jpeg')} 
            alt="Education" 
            class="rounded-2xl shadow-lg w-full h-48 object-cover"
          />
        </div>
      </div>

      <!-- Quick Links Grid -->
      <div class="grid md:grid-cols-3 gap-6">
        {programs.map((program) => (
          <a 
            href={program.href}
            class="group bg-white rounded-2xl p-8 border border-gray-100 shadow-sm hover:shadow-xl hover:border-primary-200 transition-all duration-300"
          >
            <div class="inline-flex items-center justify-center w-14 h-14 bg-primary-100 rounded-xl mb-6 group-hover:bg-primary-600 transition-colors">
              <svg class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[program.icon]} />
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-3 group-hover:text-primary-700 transition-colors">{program.title}</h3>
            <p class="text-gray-600 mb-4">{program.description}</p>
            <span class="inline-flex items-center text-primary-600 font-medium group-hover:text-primary-700">
              Learn more
              <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-primary-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white font-heading mb-4">Enroll Your Child Today</h2>
      <p class="text-primary-100 mb-8 text-lg">
        Give your child the gift of Islamic education. Registration is now open!
      </p>
      <a 
        href={url('/education/registration')}
        class="inline-flex items-center gap-2 px-8 py-4 bg-white text-primary-700 rounded-xl font-semibold hover:bg-primary-50 transition-colors shadow-lg"
      >
        Register Now
      </a>
    </div>
  </section>
</Layout>
