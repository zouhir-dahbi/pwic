---
import Layout from '../../layouts/Layout.astro';
import SubPageHero from '../../components/SubPageHero.astro';
import { url } from '../../utils/links';
---

<Layout title="Weekend School Schedule">
  <SubPageHero 
    title="Weekend School Schedule"
    subtitle="Class times and important information"
    parentTitle="Education"
    parentHref={url('/education')}
  />

  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Featured Image -->
      <div class="mb-10 rounded-2xl overflow-hidden shadow-xl">
        <img 
          src={url('/images/islamic-school-students.jpeg')} 
          alt="Weekend school students" 
          class="w-full h-64 sm:h-80 object-cover"
        />
      </div>

      <!-- Weekly Schedule -->
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Weekly Schedule</h2>
        <div class="bg-primary-50 rounded-2xl p-8">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-16 h-16 bg-primary-600 rounded-2xl flex items-center justify-center">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-primary-800">Saturday & Sunday</h3>
              <p class="text-primary-600">Weekend Islamic School</p>
            </div>
          </div>
          
          <div class="bg-white rounded-xl p-6 text-center">
            <div class="text-sm text-gray-500 mb-2">Class Hours</div>
            <div class="text-3xl font-bold text-primary-700">11:00 AM - 2:00 PM</div>
            <p class="text-gray-500 text-sm mt-2">Both Saturday and Sunday</p>
          </div>
        </div>
      </div>

      <!-- What We Teach -->
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">What Students Learn</h2>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="bg-white rounded-2xl shadow-md overflow-hidden group hover:shadow-xl transition-shadow">
            <div class="h-40 overflow-hidden">
              <img 
                src={url('/images/boy-reading-quran.jpeg')} 
                alt="Student reading Quran" 
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div class="p-5 text-center">
              <h3 class="text-lg font-bold text-gray-800">Quran</h3>
              <p class="text-sm text-gray-600 mt-1">Reading, Tajweed & Memorization</p>
            </div>
          </div>
          <div class="bg-white rounded-2xl shadow-md overflow-hidden group hover:shadow-xl transition-shadow">
            <div class="h-40 overflow-hidden">
              <img 
                src={url('/images/arabic-chalkboard.jpeg')} 
                alt="Arabic writing on chalkboard" 
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div class="p-5 text-center">
              <h3 class="text-lg font-bold text-gray-800">Arabic</h3>
              <p class="text-sm text-gray-600 mt-1">Reading & Writing Skills</p>
            </div>
          </div>
          <div class="bg-white rounded-2xl shadow-md overflow-hidden group hover:shadow-xl transition-shadow">
            <div class="h-40 overflow-hidden">
              <img 
                src={url('/images/family-reading-quran.jpeg')} 
                alt="Islamic studies" 
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div class="p-5 text-center">
              <h3 class="text-lg font-bold text-gray-800">Islamic Studies</h3>
              <p class="text-sm text-gray-600 mt-1">Fiqh, Seerah & Duas</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Academic Year -->
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Academic Year</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-gray-50 rounded-xl p-6">
            <h3 class="font-semibold text-gray-800 mb-3">Fall Semester</h3>
            <p class="text-gray-600">September - December</p>
          </div>
          <div class="bg-gray-50 rounded-xl p-6">
            <h3 class="font-semibold text-gray-800 mb-3">Spring Semester</h3>
            <p class="text-gray-600">January - May</p>
          </div>
        </div>
      </div>

      <!-- Important Rules -->
      <div class="bg-amber-50 border border-amber-200 rounded-2xl p-6 mb-8">
        <h3 class="font-semibold text-amber-800 mb-4 flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Important Information
        </h3>
        <ul class="space-y-2 text-amber-700 text-sm">
          <li>• Parents must drop off children before <strong>10:45 AM</strong>. Doors close at 11:00 AM sharp.</li>
          <li>• Parents must bring children inside and hand them to the teacher.</li>
          <li>• Children must be picked up on time. Late pickups may result in dismissal.</li>
          <li>• Minimum age for enrollment is <strong>5 years old</strong>.</li>
          <li>• Spaces are limited and accepted on a first-come basis.</li>
          <li>• Parents are not allowed to sit in classes unless designated as teachers.</li>
          <li>• School is closed on major Islamic and US holidays.</li>
        </ul>
      </div>

      <!-- Quick Links -->
      <div class="grid md:grid-cols-2 gap-4">
        <a 
          href={url('/education/fees')}
          class="flex items-center gap-4 p-4 bg-gray-50 rounded-xl hover:bg-primary-50 transition-colors group"
        >
          <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center group-hover:bg-primary-600 transition-colors">
            <svg class="w-5 h-5 text-primary-600 group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-gray-800">View Fees</h4>
            <p class="text-sm text-gray-500">$100/month per child</p>
          </div>
        </a>
        <a 
          href={url('/education/registration')}
          class="flex items-center gap-4 p-4 bg-primary-50 rounded-xl hover:bg-primary-100 transition-colors group"
        >
          <div class="w-10 h-10 bg-primary-600 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-gray-800">Register Now</h4>
            <p class="text-sm text-gray-500">Enroll your child today</p>
          </div>
        </a>
      </div>
    </div>
  </section>
</Layout>
