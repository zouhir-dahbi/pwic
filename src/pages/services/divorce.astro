---
import Layout from '../../layouts/Layout.astro';
import SubPageHero from '../../components/SubPageHero.astro';
import { url } from '../../utils/links';
---

<Layout title="Islamic Divorce Services">
  <SubPageHero 
    title="Islamic Divorce"
    subtitle="Guidance and support through the Islamic divorce process"
    parentTitle="Services"
    parentHref={url('/services')}
  />

  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Featured Image -->
      <div class="mb-10 rounded-2xl overflow-hidden shadow-xl">
        <img 
          src={url('/images/divorce-papers.jpeg')} 
          alt="Divorce services" 
          class="w-full h-64 sm:h-80 object-cover"
        />
      </div>
      
      <div class="prose prose-lg max-w-none">
        <!-- Quranic Verse -->
        <div class="bg-primary-50 rounded-2xl p-6 sm:p-8 mb-8 text-center">
          <p class="text-xl text-primary-800 font-arabic leading-loose mb-4" dir="rtl">
            وَإِنْ خِفْتُمْ شِقَاقَ بَيْنِهِمَا فَابْعَثُوا حَكَمًا مِّنْ أَهْلِهِ وَحَكَمًا مِّنْ أَهْلِهَا إِن يُرِيدَا إِصْلَاحًا يُوَفِّقِ اللَّهُ بَيْنَهُمَا
          </p>
          <p class="text-gray-600 text-sm italic">
            "And if you fear dissension between the two, send an arbitrator from his people and an arbitrator from her people. If they both desire reconciliation, Allah will cause it between them." (Quran 4:35)
          </p>
        </div>

        <div class="bg-amber-50 border border-amber-200 rounded-2xl p-6 sm:p-8 mb-8">
          <p class="text-lg text-gray-700 leading-relaxed m-0">
            PWIC encourages all Muslims who are seeking divorce to <strong>fear Allah</strong> and come to the masjid 
            for a peaceful solution to their problems. PWIC has been providing this service for the last 18 years and 
            has helped resolve many Muslim disputes without going to court, avoiding expensive court costs and litigation expenses.
          </p>
        </div>

        <h2 class="text-2xl font-bold text-gray-800 mb-6">Services We Provide</h2>
        
        <div class="space-y-4 mb-8">
          <div class="bg-gray-50 rounded-xl p-5 border-l-4 border-primary-600">
            <h4 class="font-bold text-gray-800 mb-2">Talaq (Divorce initiated by Husband)</h4>
            <p class="text-gray-600 text-sm">
              Islamic divorce initiated by the husband following proper Islamic procedures and guidelines.
            </p>
          </div>
          
          <div class="bg-gray-50 rounded-xl p-5 border-l-4 border-primary-600">
            <h4 class="font-bold text-gray-800 mb-2">Khulu (Divorce initiated by Wife)</h4>
            <p class="text-gray-600 text-sm">
              Islamic divorce initiated by the wife, where she seeks dissolution of the marriage with appropriate arrangements.
            </p>
          </div>
          
          <div class="bg-gray-50 rounded-xl p-5 border-l-4 border-primary-600">
            <h4 class="font-bold text-gray-800 mb-2">Civil Divorce Mediation</h4>
            <p class="text-gray-600 text-sm">
              Mediation services and preparation of Separation Agreement for civil divorce proceedings.
            </p>
          </div>
        </div>

        <!-- Benefits -->
        <div class="bg-green-50 border border-green-200 rounded-2xl p-6 mb-8">
          <h3 class="text-xl font-bold text-green-800 mb-4">Benefits of Using PWIC Services</h3>
          <div class="grid sm:grid-cols-2 gap-3">
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-green-700 text-sm">Avoid expensive court costs</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-green-700 text-sm">Save on litigation expenses</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-green-700 text-sm">Peaceful Islamic resolution</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-green-700 text-sm">Confidential process</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-green-700 text-sm">18+ years of experience</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-green-700 text-sm">Islamic guidance</span>
            </div>
          </div>
        </div>

        <!-- Download Documents -->
        <div class="bg-gray-50 rounded-2xl p-6 mb-8">
          <h3 class="text-xl font-bold text-gray-800 mb-4">Download Forms</h3>
          <div class="space-y-3">
            <a 
              href={url('/documents/agreement-to-mediate.pdf')}
              download
              class="flex items-center gap-4 p-4 bg-white rounded-xl border border-gray-200 hover:border-primary-300 hover:shadow-md transition-all group"
            >
              <div class="flex-shrink-0 w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8l-6-6zm-1 2l5 5h-5V4z"/>
                </svg>
              </div>
              <div class="flex-grow">
                <h4 class="font-semibold text-gray-800 group-hover:text-primary-700">Agreement to Mediate</h4>
                <p class="text-sm text-gray-500">Required form for divorce mediation</p>
              </div>
              <svg class="w-5 h-5 text-gray-400 group-hover:text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
            </a>
            
            <a 
              href={url('/documents/divorce-process-virginia.pdf')}
              download
              class="flex items-center gap-4 p-4 bg-white rounded-xl border border-gray-200 hover:border-primary-300 hover:shadow-md transition-all group"
            >
              <div class="flex-shrink-0 w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8l-6-6zm-1 2l5 5h-5V4z"/>
                </svg>
              </div>
              <div class="flex-grow">
                <h4 class="font-semibold text-gray-800 group-hover:text-primary-700">Virginia Divorce Process Guide</h4>
                <p class="text-sm text-gray-500">Information about the civil divorce process in Virginia</p>
              </div>
              <svg class="w-5 h-5 text-gray-400 group-hover:text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Contact Card -->
      <div class="bg-gradient-to-r from-primary-700 to-primary-600 rounded-2xl p-8 text-center text-white">
        <h3 class="text-2xl font-bold mb-4">Need Guidance?</h3>
        <p class="text-primary-100 mb-6">Contact the PWIC Imam to discuss your situation confidentially.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="tel:703-898-0204"
            class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-white text-primary-700 rounded-xl font-semibold hover:bg-primary-50 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            (703) 898-0204
          </a>
          <a 
            href={url('/contact')}
            class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-primary-600 border border-primary-400 text-white rounded-xl font-semibold hover:bg-primary-500 transition-colors"
          >
            Contact Form
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
