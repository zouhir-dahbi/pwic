---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import { url } from '../../utils/links';

const services = [
  {
    title: 'Nikah (Marriage)',
    description: 'Islamic marriage ceremony services performed by our Imam.',
    href: url('/services/marriage'),
    image: url('/images/nikah-mosque-couple.jpeg')
  },
  {
    title: 'Counselling',
    description: 'Confidential guidance for individuals and families.',
    href: url('/services/counselling'),
    image: url('/images/counselling-support.jpeg')
  },
  {
    title: 'Mediation',
    description: 'Resolve family disputes in a peaceful, Islamic manner.',
    href: url('/services/mediation'),
    image: url('/images/mediation-handshake.jpeg')
  },
  {
    title: 'Islamic Divorce',
    description: 'Guidance through the divorce process with compassion.',
    href: url('/services/divorce'),
    image: url('/images/divorce-papers.jpeg')
  },
  {
    title: 'Funeral Services',
    description: 'Complete janazah services including ghusl, kafan, and prayer.',
    href: url('/services/funeral'),
    image: url('/images/funeral-service.jpeg')
  },
  {
    title: 'Family Support',
    description: 'Building strong Muslim families through Islamic guidance.',
    href: url('/services/counselling'),
    image: url('/images/family-reading-quran.jpeg')
  }
];
---

<Layout title="Services">
  <Hero 
    title="Our Services"
    subtitle="Supporting our community through life's important moments"
    backgroundImage={url('/images/dua-sunset-crescent.jpeg')}
  />

  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Prince William Islamic Center provides essential religious services to support our community members 
          through important life events. All services are conducted in accordance with Islamic principles.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {services.map((service) => (
          <a 
            href={service.href}
            class="group relative rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
          >
            <img src={service.image} alt={service.title} class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-500" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-5">
              <h3 class="text-xl font-bold text-white mb-1">{service.title}</h3>
              <p class="text-white/90 text-sm mb-3">{service.description}</p>
              <span class="inline-flex items-center text-white/80 text-sm font-medium group-hover:text-white">
                Learn more
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Service Fees Section -->
  <section class="py-16 bg-gradient-to-br from-amber-50 via-white to-primary-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-amber-600 rounded-2xl mb-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
          </svg>
        </div>
        <h2 class="text-3xl font-bold text-gray-800 font-heading mb-3">Service Fees</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Transparent pricing for all PWIC services. All fees support our masjid operations and community programs.
        </p>
      </div>

      <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-gray-100">
        <!-- Header -->
        <div class="bg-primary-700 px-6 py-4">
          <div class="flex items-center justify-between text-white">
            <span class="font-semibold">PWIC Services Fee Schedule</span>
            <span class="text-primary-200 text-sm">Updated 2024</span>
          </div>
        </div>

        <div class="p-6 sm:p-8">
          <!-- Marriage Services -->
          <div class="mb-8">
            <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
              <span class="w-8 h-8 bg-pink-100 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
              </span>
              Marriage Services
            </h3>
            <div class="space-y-3">
              <div class="flex items-center justify-between py-3 px-4 bg-gray-50 rounded-xl">
                <div>
                  <span class="font-medium text-gray-800">Marriage in the Masjid</span>
                  <span class="block text-sm text-gray-500">الزواج بالمسجد</span>
                </div>
                <span class="text-xl font-bold text-primary-700">$300</span>
              </div>
              <div class="flex items-center justify-between py-3 px-4 bg-gray-50 rounded-xl">
                <div>
                  <span class="font-medium text-gray-800">Marriage Outside the Masjid</span>
                  <span class="block text-sm text-gray-500">الزواج خارج المسجد</span>
                </div>
                <span class="text-xl font-bold text-primary-700">$500</span>
              </div>
            </div>
          </div>

          <!-- Legal Documents -->
          <div class="mb-8">
            <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
              <span class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </span>
              Legal Documents
            </h3>
            <div class="space-y-3">
              <div class="flex items-center justify-between py-3 px-4 bg-gray-50 rounded-xl">
                <div>
                  <span class="font-medium text-gray-800">Last Will & Testimony</span>
                  <span class="block text-sm text-gray-500">الوصية الشرعية</span>
                </div>
                <span class="text-xl font-bold text-primary-700">$300</span>
              </div>
              <div class="flex items-center justify-between py-3 px-4 bg-gray-50 rounded-xl">
                <div>
                  <span class="font-medium text-gray-800">Power of Attorney</span>
                  <span class="block text-sm text-gray-500">الوكالة العامة</span>
                </div>
                <span class="text-xl font-bold text-primary-700">$250</span>
              </div>
            </div>
          </div>

          <!-- Divorce & Separation -->
          <div class="mb-8">
            <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
              <span class="w-8 h-8 bg-amber-100 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                </svg>
              </span>
              Divorce & Separation
            </h3>
            <div class="space-y-3">
              <div class="flex items-center justify-between py-3 px-4 bg-gray-50 rounded-xl">
                <div>
                  <span class="font-medium text-gray-800">Separation Agreement</span>
                  <span class="block text-sm text-gray-500">الانفصال الزوجي</span>
                </div>
                <span class="text-xl font-bold text-primary-700">$1,000</span>
              </div>
              <div class="flex items-center justify-between py-3 px-4 bg-gray-50 rounded-xl">
                <div>
                  <span class="font-medium text-gray-800">Islamic Divorce</span>
                  <span class="block text-sm text-gray-500">الطلاق الشرعي</span>
                </div>
                <span class="text-xl font-bold text-primary-700">$250</span>
              </div>
            </div>
          </div>

          <!-- Additional Services -->
          <div>
            <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
              <span class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
              </span>
              Additional Services
            </h3>
            <div class="space-y-3">
              <div class="flex items-center justify-between py-3 px-4 bg-gray-50 rounded-xl">
                <div>
                  <span class="font-medium text-gray-800">Document Translation</span>
                  <span class="block text-sm text-gray-500">الترجمة</span>
                </div>
                <span class="text-xl font-bold text-primary-700">$25<span class="text-sm font-normal text-gray-500">/sheet</span></span>
              </div>
              <div class="flex items-center justify-between py-3 px-4 bg-gray-50 rounded-xl">
                <div>
                  <span class="font-medium text-gray-800">Notary Public</span>
                  <span class="block text-sm text-gray-500">ختم التوثيق</span>
                </div>
                <span class="text-xl font-bold text-primary-700">$10</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Footer Note -->
        <div class="bg-gray-50 px-6 py-4 border-t border-gray-100">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
            <p class="text-sm text-gray-600">
              <svg class="w-4 h-4 inline mr-1 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Questions? Call <a href="tel:703-898-0204" class="font-semibold text-primary-700 hover:underline">(703) 898-0204</a>
            </p>
            <div class="flex items-center gap-2 text-sm text-gray-500">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
              </svg>
              We accept major credit cards
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact CTA -->
  <section class="py-16 bg-primary-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl font-bold text-gray-800 font-heading mb-4">Need to Request a Service?</h2>
      <p class="text-gray-600 mb-8">
        Contact us to schedule an appointment with our Imam or for more information about any of our services.
      </p>
      <a 
        href={url('/contact')}
        class="inline-flex items-center gap-2 px-8 py-4 bg-primary-700 text-white rounded-xl font-semibold hover:bg-primary-800 transition-colors shadow-lg"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        Contact Us
      </a>
    </div>
  </section>
</Layout>
