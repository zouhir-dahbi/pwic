---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import { url } from '../../utils/links';

const services = [
  {
    title: 'Nikah (Marriage)',
    description: 'Islamic marriage ceremony services performed by our Imam. We help couples begin their journey together in accordance with Islamic traditions.',
    href: url('/services/marriage'),
    icon: 'heart'
  },
  {
    title: 'Counselling',
    description: 'Confidential Islamic counseling services for individuals and families facing personal or marital challenges.',
    href: url('/services/counselling'),
    icon: 'chat'
  },
  {
    title: 'Mediation',
    description: 'Professional mediation services to help resolve family disputes in a peaceful, Islamic manner.',
    href: url('/services/mediation'),
    icon: 'balance'
  },
  {
    title: 'Islamic Divorce',
    description: 'Guidance and support through the Islamic divorce process with compassion and respect.',
    href: url('/services/divorce'),
    icon: 'document'
  },
  {
    title: 'Funeral Services',
    description: 'Complete janazah services including ghusl, kafan, prayer, and burial assistance.',
    href: url('/services/funeral'),
    icon: 'support'
  }
];

const icons: Record<string, string> = {
  heart: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />`,
  chat: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />`,
  balance: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />`,
  document: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />`,
  support: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />`
};
---

<Layout title="Services">
  <Hero 
    title="Our Services"
    subtitle="Supporting our community through life's important moments"
    backgroundImage={url('/images/pwic-background-arabic.jpeg')}
  />

  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Prince William Islamic Center provides essential religious services to support our community members 
          through important life events. All services are conducted in accordance with Islamic principles.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service) => (
          <a 
            href={service.href}
            class="group bg-white rounded-2xl p-8 border border-gray-100 shadow-sm hover:shadow-xl hover:border-primary-200 transition-all duration-300"
          >
            <div class="inline-flex items-center justify-center w-14 h-14 bg-primary-100 rounded-xl mb-6 group-hover:bg-primary-600 transition-colors">
              <svg class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[service.icon]} />
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-3 group-hover:text-primary-700 transition-colors">{service.title}</h3>
            <p class="text-gray-600 mb-4">{service.description}</p>
            <span class="inline-flex items-center text-primary-600 font-medium group-hover:text-primary-700">
              Learn more
              <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact CTA -->
  <section class="py-16 bg-primary-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl font-bold text-gray-800 font-heading mb-4">Need to Request a Service?</h2>
      <p class="text-gray-600 mb-8">
        Contact us to schedule an appointment with our Imam or for more information about any of our services.
      </p>
      <a 
        href={url('/contact')}
        class="inline-flex items-center gap-2 px-8 py-4 bg-primary-700 text-white rounded-xl font-semibold hover:bg-primary-800 transition-colors shadow-lg"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        Contact Us
      </a>
    </div>
  </section>
</Layout>
