---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Announcements from '../components/Announcements.astro';
import PrayerTimes from '../components/PrayerTimes.astro';
import QuickLinks from '../components/QuickLinks.astro';
import ZakatCalculator from '../components/ZakatCalculator.astro';
import siteConfig from '../data/site-config.json';
import { url } from '../utils/links';
---

<Layout title="Home">
  <Hero 
    title="Welcome to Prince William Islamic Center"
    subtitle={siteConfig.tagline}
    showCTA={true}
  />
  
  <Announcements />
  
  <PrayerTimes />
  
  <QuickLinks />
  
  <ZakatCalculator />

  <!-- Mission Section -->
  <section class="py-16 bg-gradient-to-b from-primary-800 to-primary-700 text-white relative overflow-hidden">
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-0 left-0 w-96 h-96 bg-white rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
    </div>
    
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative text-center">
      <div class="inline-flex items-center justify-center w-14 h-14 bg-white/10 backdrop-blur-sm rounded-2xl mb-5">
        <svg class="w-7 h-7 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
        </svg>
      </div>
      <h2 class="text-2xl sm:text-3xl font-bold font-heading mb-4">Our Mission</h2>
      <p class="text-lg text-primary-100 leading-relaxed">
        To connect our community to the masjid by providing religious, social, and education activities 
        to build a Muslim identity that make them proactive and responsible members of society.
      </p>
    </div>
  </section>

  <!-- Support CTA Section -->
  <section class="py-12 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-gradient-to-r from-amber-50 to-amber-100 rounded-3xl p-8 md:p-10 border border-amber-200">
        <div class="flex flex-col md:flex-row items-center justify-between gap-6">
          <div class="flex items-center gap-5 text-center md:text-left">
            <div class="hidden md:flex w-14 h-14 bg-amber-500 rounded-2xl items-center justify-center flex-shrink-0 shadow-lg">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <div>
              <h3 class="text-xl md:text-2xl font-bold text-gray-800 font-heading mb-1">
                Support Your Community Masjid
              </h3>
              <p class="text-gray-600">
                Your generous donations help us maintain our facilities and expand our programs.
              </p>
            </div>
          </div>
          <a 
            href={url('/donate')}
            class="flex-shrink-0 px-8 py-3.5 bg-gradient-to-r from-amber-600 to-amber-700 text-white rounded-xl font-bold hover:from-amber-700 hover:to-amber-800 transition-all shadow-lg hover:shadow-xl hover:-translate-y-0.5"
          >
            Donate Now
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
